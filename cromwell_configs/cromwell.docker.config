backend {
	default = "Docker" # Default backend 
	providers {
		Docker {
			actor-factory = "cromwell.backend.impl.sfs.config.ConfigBackendLifecycleActorFactory"
			config {

				concurrent-job-limit = 10 # Maximum number of concurrent jobs
				run-in-background = true 

				runtime-attributes = """
				String? docker
				Int? cpu
				Int? mem
				String docker_user = "$EUID"
				"""
				submit = "/bin/bash ${script}"

				submit-docker = """
				docker run \
				--rm -i \
				--cpus=${cpu} \
				--memory="${mem}g" \
				--entrypoint /bin/bash \
				--user "${docker_user}" \
				-v ${cwd}:${docker_cwd} \
				${docker} < ${script}
				""" 
			}
		}
		Local {
			actor-factory = "cromwell.backend.impl.sfs.config.ConfigBackendLifecycleActorFactory"
			config {
				runtime-attributes = """
				String? docker
				Int? cpu = 1
				Int? mem = 2
				String docker_user = "$EUID"
				"""
				submit = "/bin/bash ${script}"
			}
		}
	}	
}   

